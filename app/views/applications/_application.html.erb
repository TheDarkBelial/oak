<li id="<%= application.token %>" class="list-row hover:bg-base-300 cursor-grab" data-sortable-update-url="<%= application_path(application) %>">
  <%= icon_tag application.icon, class: "size-10 fill-primary my-auto" %>
  <div class="my-auto">
    <%= turbo_stream_from application %>
    <div><%= application.name %></div>
    <div class="text-xs font-semibold opacity-60 text-base-content/48"><%= application.url %></div>
  </div>
  <div class="flex flex-col sm:flex-row gap-4 my-auto">
    <div class="tooltip" data-tip="Edit">
      <%= link_to edit_application_path(application), class: "btn btn-soft hover:btn-primary" do %>
        <i class="fa-solid fa-pen"></i>
      <% end %>
    </div>

    <div class="tooltip" data-tip="Delete">
      <%= button_to application, method: :delete, class: "btn btn-error btn-soft hover:btn-error", data: { turbo_confirm: "Are you sure?" } do %>
        <i class="fa-solid fa-trash"></i>
      <% end %>
    </div>
  </div>
</li>
